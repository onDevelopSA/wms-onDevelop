<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="pdf_product_order_report">
    <t t-call="web.html_container">
      <t>
        <t t-call="web.internal_layout">
          <div class="page">
	    <div class="row">
	      <div class="col-xs-12 text-right">
		<h4><p t-field="user.company_id.name"/></h4>
		<h4><p>Date: <t t-esc="current_date"/></p></h4>
	      </div>
	      <div class="col-xs-12 text-center">
		<h4>
		  <strong>
		    <p>Order Of Product by Zone</p>
		  </strong>
		</h4>
	      </div>
	    </div>

	    <div class="row">
	      <div class="col-xs-12 text-center">
		<h4><strong><span t-esc="pick_type_name"></span></strong></h4>
		<h4>
		  <strong>
		    <!-- <p>Bank Statement Date: <t t-esc="current_date"/></p> -->
		    <!-- <p>Order Of Product by Zone:</p> -->
		    <table class="table-condensed"
			   style="width: 100%; margin-top: 40px">
		      <tr style="border-spacing: 80px;">
	    		<td><strong>Prioridad:</strong></td>
	    		<td><strong>Zona:</strong></td>
	    		<td><strong>Localizaci√≥n:</strong></td>
	    		<td><strong>Producto:</strong></td>
	    		<td><strong>Cantidad:</strong></td>			
		      </tr>
		      <tr t-foreach="prod_zone" t-as="line">
	    		<td><h5><span t-esc="line[0]"></span></h5></td>
	    		<td><h5><span t-esc="line[1]"></span></h5></td>
	    		<td><h5><span t-esc="line[2]"></span></h5></td>
	    		<td><h5><span t-esc="line[3]"></span></h5></td>
	    		<td style="text-align: center;"><h5><span t-esc="line[4]"></span></h5></td>
		      </tr>
		      <tr>
			<td><h4><p></p></h4></td>
			<td><h4><p></p></h4></td>
			<td><h4><p></p></h4></td>
			<td><h4><strong>Total:</strong></h4></td>
			<td><h4 align="center">
			  <strong><t t-esc="product_amount"/></strong>
			</h4></td>
                      </tr>
		    </table>
		  </strong>
		</h4>
	      </div>
	    </div>
          </div>
        </t>
      </t>
    </t>
  </template>

  <record id="paperformat_product_order" model="report.paperformat">
    <field name="name">A4 Portrait Account</field>
    <field name="default" eval="True"/>
    <field name="format">custom</field>
    <field name="page_height">297</field>
    <field name="page_width">200</field>
    <field name="orientation">Portrait</field>
    <field name="margin_top">12</field>
    <field name="margin_bottom">15</field>
    <field name="margin_left">5</field>
    <field name="margin_right">5</field>
    <field name="header_line" eval="False"/>
    <field name="header_spacing">9</field>
    <field name="dpi">110</field>
  </record>

