<odoo>
  <record id="form_rma_stock_pick_inh" model="ir.ui.view">
    <field name="name">stock.picking.form</field>
    <field name="model">stock.picking</field>
    <field eval="12" name="priority"/>
    <field name="inherit_id" ref="stock.view_picking_form"/>
    <field name="arch" type="xml">
      <xpath expr="//form/header/button[@name='button_validate']"
	     position="before">
	<field name="is_suborder" invisible="1"/>
	<field name="suborders_ids" invisible="1"/>
	<button name="distribute_order"
		string="Redistribute Order"
		type="object"
		class="oe_highlight"
		attrs="{'invisible': ['|','|',('is_suborder','!=', False),('state', '!=', 'assigned'),('picking_type_code', '!=', 'outgoing')]}"
		groups="base.group_user"/>
	<button name="get_internal_transfers_view"
		string="Suborders"
		type="object"
		attrs="{'invisible': ['|',('is_suborder','!=', False),('state', 'not in', ['distributed'])]}"
		class="oe_highlight"
		groups="account.group_account_manager"/>
      </xpath>
      <xpath expr="//sheet/notebook/page/field[@name='move_lines']" position="before">
	<field name="picking_type_code" string="Just for Condition" invisible="1"/>
      </xpath>
      <xpath expr="//sheet/notebook/page/field[@name='move_lines']/tree/field[@name='product_id']"
	     position="before">
	<field name="zone_location_info_ids"
	       attrs="{'column_invisible': ['|',('parent.is_suborder', '!=', False),('parent.picking_type_code', '!=', 'outgoing')]}"
	       options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"
	       string="Other Location"/>
	<field name="sale_line_id" invisible="1"/>
      </xpath>
    </field>
  </record>
</odoo>
