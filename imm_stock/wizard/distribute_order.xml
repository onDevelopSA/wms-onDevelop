<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="form_distribute_order" model="ir.ui.view">
    <field name="name">form.distribute.order</field>
    <field name="model">distribute.order</field>
    <field name="arch" type="xml">
      <form string="Distribute Order">
        <group>
	  <field name="partner_msg" nolabel="1" readonly="True"/>
	</group>
	<separator string="New Orders"/>
	<group colspan="2">
	  <field name="subord_ids" nolabel="1" readonly="False">
	    <tree name="Locations" editable="top" no_create_edit="1">
	      <field name="product_id" string="Product" readonly="True"/>
	      <field name="product_qty" string="Product qty" readonly="True"/>
	      <field name="location_id" string="Location" readonly="True"/>
	      <field name="stock_zone_id" string="Zone" readonly="True"/>
	      <field name="employee_id" string="Employee"/>
	    </tree>
	  </field>
        </group>
        <footer>
          <button name="transfer_pick" string="Distribute" type="object"
		  class="btn-primary"/>
          <button string="Cancel" class="btn-default" special="cancel" />
        </footer>
      </form>
    </field>
  </record>
</odoo>
